<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <display-name>Servlet Programming Assignment</display-name>
    <description>
        Servlet demonstrations including Life Cycle, Request Headers, and Form Processing
    </description>
    
    <!-- Welcome File List -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    
    <!-- Servlet 1: Life Cycle Demonstration -->
    <servlet>
        <servlet-name>LifeCycleServlet</servlet-name>
        <servlet-class>LifeCycleServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>LifeCycleServlet</servlet-name>
        <url-pattern>/LifeCycleServlet</url-pattern>
    </servlet-mapping>
    
    <!-- Servlet 2: Request Header Information -->
    <servlet>
        <servlet-name>RequestHeaderServlet</servlet-name>
        <servlet-class>RequestHeaderServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>RequestHeaderServlet</servlet-name>
        <url-pattern>/RequestHeaderServlet</url-pattern>
    </servlet-mapping>
    
    <!-- Servlet 3: Student Form Processing -->
    <servlet>
        <servlet-name>StudentFormServlet</servlet-name>
        <servlet-class>StudentFormServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>StudentFormServlet</servlet-name>
        <url-pattern>/StudentFormServlet</url-pattern>
    </servlet-mapping>
    
    <!-- Session Configuration -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    
</web-app>
